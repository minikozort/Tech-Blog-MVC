<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <article class="card mb-4">
        <div class="card-header d-flex justify-content-between">
          <h2 class="h4 mb-0">{{blog.title}}</h2>
          <div class="text-muted">
            Blogged by {{user.username}} on {{formatDate blog.createdAt}}
          </div>
        </div>
        <div class="card-body">
          {{blog.body}}
        </div>
      </article>

      {{#if blog.comments}}
      <section class="card mb-4">
        <div class="card-header">
          <h3 class="h5 mb-0">Comments</h3>
        </div>
        <div class="card-body">
          {{#each blog.comments as |comment|}}
          {{> comments}}
          {{/each}}
        </div>
      </section>
      {{/if}}

      <form id="new-comment-form" class="card">
        <div class="card-header">
          <h3 class="h5 mb-0">Add New Comment</h3>
        </div>
        <div class="card-body">
          <input type="hidden" name="blog-id" value="{{blog.id}}" />
          <div class="form-group">
            <label for="comment-body" class="form-label">Comment</label>
            <textarea name="comment-body" id="comment-body" class="form-control" rows="4"></textarea>
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="../public/js/comment.js"></script>