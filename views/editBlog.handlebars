<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h2 class="mb-4">Edit blog</h2>
      <form id="edit-blog-form">
        <input type="hidden" name="blog-id" value="{{blog.id}}" />

        <div class="form-group">
          <label for="blog-title">Title</label>
          <input type="text" name="blog-title" value="{{blog.title}}" class="form-control" />
        </div>

        <div class="form-group">
          <label for="blog-body">Content</label>
          <textarea name="blog-body" class="form-control">{{blog.body}}</textarea>
        </div>

        <button type="submit" class="btn btn-primary">Update</button>
        <button type="button" id="delete-btn" class="btn btn-danger">Delete</button>
      </form>
    </div>
  </div>
</div>

<script src='../public/js/allPosts.js'></script>