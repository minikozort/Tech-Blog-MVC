<div class="post mb-4">
  <article class="card shadow-sm mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h2 class="h4 mb-0">{{post.title}}</h2>
      <div class="text-muted">
        Posted by <strong class="uppercase2">{{post.user.username}}</strong> on {{formatDate post.createdAt}}
      </div>
    </div>
    <div class="card-body">
      <p>{{post.body}}</p>
    </div>
  </article>

  {{#if post.comments}}
  <section class="card shadow-sm mb-4">
    <div class="card-header">
      <h3 class="h5 mb-0">Comments</h3>
    </div>
    <div class="card-body">
      {{#each post.comments as |comment|}}
        {{> comments}}
      {{/each}}
    </div>
  </section>
  {{/if}}

  <form id="new-comment-form" class="card shadow-sm">
    <div class="card-header">
      <h3 class="h5 mb-0">Add New Comment</h3>
    </div>
    <div class="card-body">
      <input type="hidden" name="post-id" value="{{post.id}}" />
      <div class="form-group">
        <label for="comment-body" class="form-label">Comment</label>
        <textarea name="comment-body" id="comment-body" class="form-control" rows="3" required></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </form>
</div>

<script src="/js/comment.js"></script>
