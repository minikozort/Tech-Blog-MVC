<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
      <div class="card">
        <div class="card-header">
          <h2 class="h5 mb-0">Sign Up</h2>
        </div>
        <div id="signup" role="tabpanel">
          <form id="signup-form" class="card-body">
            <div class="form-group">
              <label for="username-input-signup" class="form-label">Username</label>
              <input type="text" id="username-input-signup" class="form-control" />
            </div>
            <div class="form-group">
              <label for="password-input-signup" class="form-label">Password</label>
              <input type="password" id="password-input-signup" class="form-control" />
            </div>
            <button type="submit" id="signup-btn" class="btn btn-primary btn-block">Signup!</button>
            <a href="/login" class="btn btn-link btn-block mt-2">Login!</a>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<script src='../public/js/signUp.js'></script>